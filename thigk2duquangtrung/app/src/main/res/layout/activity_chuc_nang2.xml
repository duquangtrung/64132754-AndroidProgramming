<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/LogoNTU"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tính điểm trung bình môn học"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Điểm giữa kỳ (50%)"
        android:textSize="16sp"
        android:layout_marginBottom="4dp"/>

    <EditText
        android:id="@+id/edtDiemGiuaKy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập điểm số"
        android:inputType="numberDecimal"
        android:drawableLeft="@android:drawable/ic_input_get"
        android:padding="8dp"
        android:background="@android:drawable/edit_text"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Điểm thi cuối kỳ (50%)"
        android:textSize="16sp"
        android:layout_marginBottom="4dp"/>

    <EditText
        android:id="@+id/edtDiemCuoiKy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập điểm số"
        android:inputType="numberDecimal"
        android:drawableLeft="@android:drawable/ic_input_get"
        android:padding="8dp"
        android:background="@android:drawable/edit_text"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnTinhDiemTB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tính điểm TB"
        android:padding="10dp"
        android:layout_gravity="center"
        android:backgroundTint="@android:color/holo_blue_light"
        android:textColor="@android:color/white"/>

    <TextView
        android:id="@+id/txtKetQua"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hiện kết quả ở đây"
        android:textSize="16sp"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="10dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/darker_gray"
        android:textColor="@android:color/white"/>
</LinearLayout>
